{
    "appId": "com.protocase.drivesetupwizard",
    "directories": {
        "output": "dist"
    },
    "productName": "45Drives-Setup-Wizard",
    "artifactName": "${productName}-${version}-${os}-${arch}.${ext}",
    "publish": {
        "provider": "github",
        "owner": "45Drives",
        "repo": "houston-client-manager"
    },
    "afterSign": "scripts/afterSign-verify.js",
    "afterPack": "scripts/afterPack-fix-native.js",
    "nsis": {
        "oneClick": false,
        "perMachine": false,
        "allowToChangeInstallationDirectory": true,
        "shortcutName": "45Drives Setup Wizard"
    },
    "mac": {
        "hardenedRuntime": true,
        "entitlements": "entitlements.mac.plist",
        "entitlementsInherit": "entitlements.mac.plist"
    },
    "win": {
        "target": "nsis",
        "compression": "maximum",
        "icon": "icon.ico",
        "sign": false
    },
    "linux": {
        "target": [
            "deb",
            "rpm",
            "pacman"
        ],
        "vendor": "45Drives",
        "maintainer": "Matt Pyne <mpyne@45drives.com>",
        "icon": "icon.png"
    },
    "files": [
        {
            "from": "node_modules/@45drives",
            "to": "node_modules/@45drives",
            "filter": [
                "**/*"
            ]
        },
        {
            "from": "build/main",
            "to": "main",
            "filter": [
                "**/*"
            ]
        },
        {
            "from": "build/renderer",
            "to": "renderer",
            "filter": [
                "**/*"
            ]
        },
        {
            "from": "src/main/static",
            "to": "static",
            "filter": [
                "**/*"
            ]
        },
        "!src",
        "!build",
        "!builds",
        "!dist",
        "!scripts",
        "!houston-common",
        "!**/*.test.js",
        "!**/*.test.ts",
        "!**/*.md",
        "!**/*.config.js",
        "!**/*.config.ts",
        "!**/*.config.cjs",
        "!**/package-lock.json",
        "!**/.git*",
        "!**/__tests__/**",
        "!**/*.map",
        "!**/MakeFile",
        "!**/.yarn/**",
        "!**/node_modules/*/test/**",
        "!**/node_modules/*/.git/**",
        "!**/node_modules/rollup/**",
        "!**/node_modules/webpack/**",
        "!**/node_modules/esbuild/**",
        "!**/node_modules/vite/**",
        "!**/node_modules/@vue/**",
        "!**/node_modules/typescript/**",
        "!**/node_modules/vue/**",
        "!**/node_modules/@types/**"
    ],
    "extraResources": [
        {
            "from": "src/main/static",
            "to": "static",
            "filter": [
                "**/*"
            ]
        }
    ],
    "asar": false
}
