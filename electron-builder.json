{
    "appId": "com.protocase.houstonclientmanager",
    "directories": {
        "output": "dist"
    },
    "nsis": {
        "oneClick": false,
        "perMachine": false,
        "allowToChangeInstallationDirectory": true,
        "shortcutName": "Houston Client Manager"
    },
    "win": {
        "target": "nsis",
        "compression": "maximum"
    },
    "linux": {
        "target": [
            "snap"
        ]
    },
    "files": [
        {
            "from": "build/main",
            "to": "main",
            "filter": [
                "**/*"
            ]
        },
        {
            "from": "build/renderer",
            "to": "renderer",
            "filter": [
                "**/*"
            ]
        },
        {
            "from": "src/main/static",
            "to": "static",
            "filter": [
                "**/*"
            ]
        },
        "!src",
        "!build",
        "!dist",
        "!scripts",
        "!houston-common",
        "!**/*.test.js",
        "!**/*.test.ts",
        "!**/*.md",
        "!**/*.config.js",
        "!**/*.config.ts",
        "!**/*.config.cjs",
        "!**/package-lock.json",
        "!**/.git*",
        "!**/__tests__/**",
        "!**/*.map",
        "!**/MakeFile",
        "!**/.yarn/**",
        "!**/node_modules/**/.cache",
        "!**/node_modules/**/.vscode",
        "!**/node_modules/**/src/**",
        "!**/node_modules/**/docs/**",
        "!**/node_modules/**/example*/**",
        "!**/node_modules/**/@esbuild",
        "!**/node_modules/**/@rollup",
        "!**/node_modules/*/test/**",
        "!**/node_modules/*/.git/**",
        "!**/node_modules/rollup/**",
        "!**/node_modules/webpack/**",
        "!**/node_modules/esbuild/**",
        "!**/node_modules/vite/**",
        "!**/node_modules/@vue/**",
        "!**/node_modules/typescript/**",
        "!**/node_modules/vue/**",
        "!**/node_modules/@types/**"
    ],
    "extraResources": [
        {
            "from": "src/main/static/cwrsync",
            "to": "cwrsync",
            "filter": [
                "**/*"
            ]
        },
        {
            "from": "node_modules/@45drives",
            "to": "node_modules/@45drives"
        }
    ],
    "asar": true,
    "compression": "maximum"
}